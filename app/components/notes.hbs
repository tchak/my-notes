<div>
  <h2 class="mt-6 text-center text-3xl leading-9 font-extrabold text-gray-900">
    {{t "My Notes"}}
  </h2>
</div>
<div class="bg-white shadow overflow-hidden sm:rounded-md mt-5">
  <ul>
    {{#each @notes as |note index|}}
      <li class={{if (not-eq index 0) "border-t border-gray-200"}}>
        <div class="px-4 py-4 sm:px-6">
          <div class="flex items-center justify-between">
            <div class="mr-6 flex items-center text-sm leading-5 text-gray-500">
              {{note.note}}
            </div>
          </div>
          <div class="mt-2 sm:flex sm:justify-between">
            <button
              type="button"
              class="inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs leading-4 font-medium rounded text-indigo-700 bg-indigo-100 hover:bg-indigo-50 focus:outline-none focus:border-indigo-300 focus:shadow-outline-indigo active:bg-indigo-200 transition ease-in-out duration-150"
              {{on "click" (fn this.removeNote note.id)}}
            >
              {{t "done"}}
            </button>
            <div
              class="mt-2 flex items-center text-sm leading-5 text-gray-500 sm:mt-0"
            >
              <svg
                class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                  clip-rule="evenodd"
                ></path>
              </svg>
              <span>
                {{t "Created on"}}
                <time datetime={{note.created_at}}>
                  {{
                    format-date
                    note.created_at
                    month="long"
                    day="numeric"
                    year="numeric"
                  }}
                </time>
              </span>
            </div>
          </div>
        </div>
      </li>
    {{/each}}
  </ul>
</div>